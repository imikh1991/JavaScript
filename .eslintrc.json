{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "script",
    "ecmaFeatures": {
      "modules": false
    }
  },
  "rules": {
    "strict": [
      2,
      "global"
    ],
    "no-plusplus": "off"
  },
  "ignorePatterns": [
    "*.html"
  ],
  "overrides": [
    {
      "files": [
        "*.test.js",
        "tester.js"
      ],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
